<div class="main-wrapper">
  <div class="game-index">
    <% @games.each do |game|%>
      <%= link_to("/games/#{game.name}") do %>
        <div class="games-container">
          <%= image_tag game.icon_image.url %>
          <div class="game-info">
            <h3><%= game.name.truncate(17) %></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
